{
  "manifest_version": 3,
  "name": "Mute All Audio Tabs",
  "version": "1.0",
  "description": "Mutes all tabs that are currently playing audio",
  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "./icons/icon48.png"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  }
}